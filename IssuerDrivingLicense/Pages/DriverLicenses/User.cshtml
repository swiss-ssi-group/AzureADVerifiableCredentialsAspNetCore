@page
@model IssuerDrivingLicense.Pages.DriverLicenses.UserModel

@{
    ViewData["Title"] = "User";
}

<h3>Driver Licenses for @Model.UserName</h3>

<p>
    <a asp-page="Create" asp-route-id="@Model.UserName">Add New Driving License</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>User Name (Email)</th>
            <th>IssuedAt</th>
            <th>Family Name</th>
            <th>Given Name</th>
            <th>Driving Privileges</th>
            <th>Date of Birth</th>
            <th>Issued by</th>
            <th>Valid</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DriverLicense) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @item.IssueDate:yyyy-MM-dd
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GivenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrivingPrivileges)
            </td>
            <td>
                @item.DateOfBirth:yyyy-MM-dd
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issuedby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valid)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit fa-2x"></i></a>
                <a asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-info fa-2x"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
