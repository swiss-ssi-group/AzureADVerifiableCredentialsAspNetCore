@page
@model IssuerDrivingLicense.Pages.DriverLicenses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Create Driver Licence</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label class="control-label">UserName (Email)</label>
                <input asp-for="DriverLicense.UserName" class="form-control" />
                <span asp-validation-for="DriverLicense.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Family Name</label>
                <input asp-for="DriverLicense.FamilyName" class="form-control" />
                <span asp-validation-for="DriverLicense.FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Given Name</label>
                <input asp-for="DriverLicense.GivenName" class="form-control" />
                <span asp-validation-for="DriverLicense.GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date of Birth</label>
                <input asp-for="DriverLicense.DateOfBirth" class="form-control" />
                <span asp-validation-for="DriverLicense.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Driving Privileges</label>
                <input asp-for="DriverLicense.DrivingPrivileges" class="form-control" />
                <span asp-validation-for="DriverLicense.DrivingPrivileges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <br />
                    <label asp-for="DriverLicense.Valid">
                        <input class="big_checkbox" asp-for="DriverLicense.Valid" />
                        @Html.DisplayNameFor(model => model.DriverLicense.Valid)
                    </label>
                </div>
            </div> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="User" asp-route-id="@Model.UserName">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
